{
	"manifest_version": 2,

	"name": "Save Text Extension",
	"description": "experimental",
	"version": "1.0",
	"author": "KR",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
		"downloads",
    	"tabs",
        "http://*/",
        "https://*/"
    ],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"icons": { "16": "img/icon16.png",
           "48": "img/icon48.png",
          "128": "img/icon128.png" }
}
